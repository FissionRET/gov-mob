{
  "compilerOptions": {
    "target": "es2021",
    "module": "commonjs",
    "outDir": "./dist/",
    "lib": ["ES2021"],
    "strict": false,
    "sourceMap": true,
    "skipLibCheck": true,
    "rootDir": "./src",
    "esModuleInterop": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "baseUrl": "./src",
    "forceConsistentCasingInFileNames": true
  },
  "exclude": ["dist", "node_modules"]
}
